<div class="form-wrapper">
    <div class="form-title">
        <div>Account Login</div>
    </div>
    <form method="post" action="/users/login">
        <div class="tab-container">
            <div class="tab-container">
                <label class="form-label">Email:</label>
                <input class="form-input-text" maxlength="256" name="email" placeholder="Email" type="email">
                <label class="form-label">Password:</label>
                <input class="form-input-text" maxlength="256" name="password" placeholder="Password" type="password">
            </div>
        </div>
        <div class="login-form-bottom">
            <input class="form-button ok-button" value="ok">
            <input id="exit-button" class="form-button" value="cancel">
        </div>
    </form>
</div>