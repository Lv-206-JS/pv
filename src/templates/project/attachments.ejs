<div class = "main-form">
    <h2 class="attachments-header">Attachments</h2>
    <div class="add-attachment">
        <form class="upload" enctype="multipart/form-data">
            <input id="add-attachment-file" type="file"></input>
        </form>
    </div>
    <div class="attachment-list">
        <ul>
            <%for(var i = 0; i <  attachments.length; i++) {%>
            <div class="attachment-item">
                <a class="referense-to-file" href="<%=attachments[i].relativePath%>" target="_blank">
                    <li><%= attachments[i].fileName %></li>
                </a>
                <div id="delete-attachment" data-id="<%= attachments[i].attachmentId %>">
                    <img src="/images/delete-button.png" id="delete-attachment-image" alt="delete attachment"/>
                </div>
            </div>
            <% }%>
        </ul>
    </div>
    <div class="common-form-buttons">
        <button class="ok-button">Ok</button>
    </div>
</div>
